# Nilai global untuk deployment PoA di k3s.
# Salin file ini menjadi global.env sebelum menjalankan script.

NETWORK_ID=477748
CHAIN_ID=477748
POA_NETWORK_NAME=poa-k8s
GETH_IMAGE=ethereum/client-go:v1.13.15
CLEF_IMAGE=ethereum/client-go:alltools-v1.13.15
BOOTNODE_ENODE=enode://BOOTNODE_PUBKEY@BOOTNODE_IP:30303

# Pengaturan Kubernetes
K8S_NAMESPACE=poa-mainnet
K8S_STORAGE_CLASS=local-path
K8S_PULL_POLICY=IfNotPresent
K8S_SERVICE_ACCOUNT=default

# Monitoring & integrasi
ETHSTATS_WS_SECRET=changeme
ETHSTATS_ENDPOINT=ethstats.example.com:3000
INFLUXDB_HTTP_URI=http://monitoring.example.com:8086
INFLUXDB_DB=geth_metrics
INFLUXDB_USER=geth_user
INFLUXDB_PASSWORD=changeme
PROMETHEUS_PUSHGATEWAY=http://monitoring.example.com:9091
