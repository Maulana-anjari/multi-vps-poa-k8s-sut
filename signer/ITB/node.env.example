NODE_NAME=itb
SIGNER_ADDRESS=0x0000000000000000000000000000000000000000
SIGNER_PASSWORD_FILE=config/passwords/ITB.pass
SIGNER_KEYSTORE_PATH=artifacts/signer/ITB/volumes/geth/keystore
CLEF_MASTERSEED_PATH=artifacts/signer/ITB/volumes/clef/masterseed.json
PUBLIC_IP=0.0.0.0
P2P_PORT=30303
HTTP_PORT=8545
WS_PORT=8546
ETHSTATS_ID=ITB
K8S_NODE_SELECTOR=poa-host=vps-b
